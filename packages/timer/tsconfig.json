{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "target": "es5",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2019"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*"
  ]
}
